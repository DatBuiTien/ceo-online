<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="ceo_payment_request_tree" model="ir.ui.view">
        <field name="name">opencourse.payment_request.tree</field>
        <field name="model">opencourse.payment_request</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="city"/>
                <field name="referal_code"/>
                <field name="method"/>
                <field name="activation_code"/>
            </tree>
        </field>
    </record>

    <record id="action_ceo_online_payment_request" model="ir.actions.act_window">
        <field name="name">Payment request</field>
        <field name="res_model">opencourse.payment_request</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>