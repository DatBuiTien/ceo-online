<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="ceo_course_form" model="ir.ui.view">
        <field name="name">opencourse.course.form</field>
        <field name="model">opencourse.course</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="logo_id"/>
                        <field name="group_id"/>
                        <field name="name"/>
                        <field name="code"/>

                        <field name="supervisor_id"/>
                        <field name="level"/>

                    </group>

                </sheet>
            </form>
        </field>
    </record>

    <record id="ceo_course_tree" model="ir.ui.view">
        <field name="name">opencourse.course.tree</field>
        <field name="model">opencourse.course</field>
        <field name="arch" type="xml">
            <tree string="Res groups">
                <field name="name"/>
                <field name="code"/>
                <field name="create_uid"/>
                <field name="status"/>
                <field name="create_date"/>
                <field name="write_date"/>
            </tree>
        </field>
    </record>

    <record id="action_ceo_online_course" model="ir.actions.act_window">
        <field name="name">Course</field>
        <field name="res_model">opencourse.course</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>