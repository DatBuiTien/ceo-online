<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="ceo_web_page_form" model="ir.ui.view">
        <field name="name">web.page.form</field>
        <field name="model">opencourse.web_page</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="content"/>
                    </group>
                    <notebook>
                        <page string="Section">
                            <field name="section_ids"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="ceo_web_page_tree" model="ir.ui.view">
        <field name="name">web.page.tree</field>
        <field name="model">opencourse.web_page</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
                <field name="content"/>
                <field name="order"/>
            </tree>
        </field>
    </record>

    <record id="action_ceo_online_web_page" model="ir.actions.act_window">
        <field name="name">Page content</field>
        <field name="res_model">opencourse.web_page</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>