<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="ceo_learning_path_form" model="ir.ui.view">
        <field name="name">opencourse.learning_path.form</field>
        <field name="model">opencourse.learning_path</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="summary"/>
                        </group>
                        <group>
                            <field name="logo_id"/>

                        </group>
                    </group>
                    <notebook>
                        <page string="List course">
                            <field name="course_ids" options="{'create': False}"/>
                        </page>
                        <page string="Groups">
                            <field name="group_ids" options="{'create': False}"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="ceo_learning_path_tree" model="ir.ui.view">
        <field name="name">opencourse.learning_path.tree</field>
        <field name="model">opencourse.learning_path</field>
        <field name="arch" type="xml">
            <tree string="Learning path">
                <field name="name"/>
                <field name="group_name"/>
                <field name="course_count"/>
                <field name="create_date"/>
                <field name="write_date"/>
            </tree>
        </field>
    </record>

    <record id="action_ceo_online_learning_path" model="ir.actions.act_window">
        <field name="name">Course</field>
        <field name="res_model">opencourse.learning_path</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>